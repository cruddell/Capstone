<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/exhibit_fragment_height"
                android:alpha="1.0"
                android:background="@color/md_grey_900"
                tools:context=".Exhibits.ExhibitActivity"
    >



    <ImageView
        android:src="@drawable/img3500"
        android:layout_width="match_parent"
        android:id="@+id/backgroundImage"
        android:scaleType="centerCrop"
        android:alpha=".45"
        android:layout_height="@dimen/exhibit_fragment_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:alpha=".35"
        android:background="@color/transparent"
        />

    <TextView
        tools:text="King James Bible, 3rd Folio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:id="@+id/titleView"
        android:background="@color/transparent"
        android:textColor="@color/md_white_1000"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeRemaining"
        android:layout_below="@+id/titleView"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:textColor="@color/md_white_1000"
        tools:text="0:30"
        />
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:progress="35"
        android:progressBackgroundTint="@color/md_grey_50"
        android:layout_below="@+id/titleView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_toLeftOf="@+id/timeRemaining"
        />


    <ImageButton
        android:src="@drawable/ic_play_arrow_white_24dp"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="@color/transparent"
        android:id="@+id/playButton"/>

    <ImageView
        android:src="@drawable/ic_replay_10_white_24dp"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/playButton"
        android:layout_toStartOf="@+id/playButton"
        android:layout_marginEnd="42dp"
        android:id="@+id/rewindButton"/>

    <ImageView
        android:src="@drawable/ic_forward_10_white_24dp"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/playButton"
        android:layout_toEndOf="@+id/playButton"
        android:layout_marginStart="42dp"
        android:id="@+id/forwardButton"/>


</RelativeLayout>
