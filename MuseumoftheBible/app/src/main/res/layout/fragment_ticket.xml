<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ticketing.TicketingFragment"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_orange_50"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_ticket_to_agent"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal|top"
                android:layout_margin="@dimen/text_margin"
                android:textSize="18sp"
                android:textColor="#000000" />
            <ImageView
                android:layout_width="@dimen/ticket_qrcode_size"
                android:layout_height="@dimen/ticket_qrcode_size"
                android:id="@+id/ticketView"
                android:background="@drawable/no_ticket"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>
