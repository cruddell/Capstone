<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ticketing.TicketingFragment"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/md_orange_50"
        android:alpha=".75"
        android:id="@+id/backgroundView"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:contentDescription="@string/ticket_name"
            android:ems="10"
            android:id="@+id/nameField"
            android:layout_marginTop="@dimen/ticketing_field_margin_top"
            android:hint="@string/ticketing_helperText_name" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:contentDescription="@string/ticket_email"
            android:ems="10"
            android:id="@+id/emailField"
            android:layout_marginTop="@dimen/ticketing_field_margin_top"
            android:hint="@string/ticketing_helperText_emailAddress" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:contentDescription="@string/ticket_phone"
            android:ems="10"
            android:id="@+id/phoneField"
            android:layout_marginTop="@dimen/ticketing_field_margin_top"
            android:hint="@string/ticketing_helperText_phoneNumber" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/ticket_number_of_tickets"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numberTicketsField"
            android:layout_marginTop="@dimen/ticketing_field_margin_top"
            android:hint="@string/ticketing_helperText_numberTickets" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/ticket_continue_button"
            android:text="@string/ticketing_buttonText_continue"
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:onClick="continuePressed"
            android:backgroundTint="@color/md_blue_500"
            android:layout_marginBottom="@dimen/ticketing_field_margin_top"
            android:layout_marginTop="@dimen/ticketing_field_margin_top"
            />
    </LinearLayout>


</FrameLayout>
